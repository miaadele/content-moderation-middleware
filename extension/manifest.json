{
    "manifest_version": 3, 
    "name": "Ascertion", 
    "version": "1.0", 
    "description": "Text verification on social media platforms.",
    "permissions": [
        "nativeMessaging",
        "activeTab", 
        "scripting", 
        "storage",
        "contextMenus"
        "sidePanel",
        "tabs"
    ], 
    "host_permissions": [
        "https://*/"
    ], 
    "background": {
        "service_worker": "background.js"
    }, 
    "content_scripts": [
        {
            "matches": ["https://www.linkedin.com/*"], 
            "js": ["forge.min.js", "crypto-client.js", "content.js"], 
            "run_at": "document_idle"
        }
    ], 
    "icons": {
        "128": "icons/placeholder.png"
    }, 
    "action": {
        "default_icon": {
            "128": "icons/128.png"
        }, 
        "default_title": "Click to activate"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    }
}